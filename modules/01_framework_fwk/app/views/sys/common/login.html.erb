<h1>this is the login page</h1>
<div style="margin:0 auto;height: 300px;width: 300px;border: 1px solid black;">
  <%= form_tag('login', method: 'post') do %>
      <ul>
        <% if params[:error] %>
            <li class="zmwy-li">
              <%= params[:error] %>
            </li>
        <% end %>
        <li class="zmwy-li">
          <label class="search-label">username：</label>
          <%= text_field_tag :username %>
        </li>
        <li class="zmwy-li">
          <label class="search-label">password：</label>
          <%= password_field_tag :password %>
        </li>
        <li class="zmwy-li-search">
          <%= submit_tag :submit %>
        </li>
      </ul>
  <% end %>
</div>